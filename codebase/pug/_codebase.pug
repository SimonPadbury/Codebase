//- Codebase Starter

include generators/__index

block vars
  - lang = ""
  - htmlDir = ""
  - htmlClass = ""
  - title = ""
  - description = ""
  - author = ""
  - favicon = ""
  - faviconType = ""
  - bodyClass = ""

doctype html
html(lang=lang, dir=htmlDir, class=htmlClass)

  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome-1")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")

    meta(name="description", content=description)
    meta(name="author", content=author)

    title #{title}

    link(rel="icon", href=favicon, type=faviconType)

    block head-addins

      //- If you wish to replace `codebase.css` with your own CSS (that imports 
        `codebase.css`), then use `block` in your template. Or if you wish to retain this `codebase.css` below, then use `block append head-addins`.
      link(rel="stylesheet", href="codebase/css/codebase.css")

  body(class=bodyClass)
    block body

    block body-foot-addins
      //- To replace `codebase.js` with your own JS (that imports 
        `codebase.js`), use `block` in your template. Or to retain
        `codebase.js`,  use `block append`.
      script(src="codebase/js/codebase.js")
