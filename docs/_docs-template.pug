//- Codebase Docs Template

extends ../codebase/pug/_codebase

block vars
  - lang = "en"
  - title= "Codebase"
  - description = "Codebase 2 - a Sass, JavaScript and Pug website component library"
  - author = "Simon Padbury"

block head-addins
  link(rel="stylesheet", href="docs/docs-theme/css/styles.css")

block body
    
  include docs-template-partials/_docs-header

  .docs__main

    block template__navigation

    block template__sub-navigation
        
    .docs__docs-content        
      
      header
        block template__header

      main
        block template__body

      include docs-template-partials/_docs-footer

    block template__sub-menus
  
  .b--thin.b--rounded.bs.ph--4.bg--white.text--center(style="position: fixed; right: 8px; bottom: 8px; z-index: 999;")
    | Viewport 
    span.hide--xs-up xs &amp; down
    span.hide--xs-down.hide--sm-up xs&mdash;sm
    span.hide--sm-down.hide--md-up sm&mdash;md
    span.hide--md-down.hide--lg-up md&mdash;lg
    span.hide--lg-down lg &amp; up

block append body-foot-addins
  script(src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.4/holder.min.js")
