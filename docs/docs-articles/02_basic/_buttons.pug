      i.fa.fa-search
            
    p
      button.btn.btn--icon
        i.fa.fa-search
      
      button.btn.btn--icon.btn--big-text
        i.fa.fa-search

      button.btn.btn--icon.btn--outline
        i.fa.fa-search

      button.btn.btn--icon.btn--outline.btn--big-text
        i.fa.fa-search
    
    p
