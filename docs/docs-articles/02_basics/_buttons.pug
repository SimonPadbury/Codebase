      | Normal text
    = " "
    a.btn.btn--primary.big(href="#/")
      | Big text
    = " "
    a.btn.btn--primary.btn--outline(href="#/")
      | Normal text
    = " "
    a.btn.btn--primary.big.btn--outline(href="#/")
      | Big text
    
  p
