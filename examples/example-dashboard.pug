//- Example Blog Index

extends ../codebase/pug/_codebase

block vars
  - var title = "Example Dashboard | Codebase"
  - var bodyClass = "bg--gray-lighten-3"

block append head-addins
  +font-awesome
  style.
    .example-menubar-1 {
      z-index: 121;
    }
    .example-menubar-1 a {
      padding: 8px 16px;
    }
    .example-menubar-1 a:hover {
      text-decoration: none;
      cursor: pointer;
      background-color: #f5f5f5; 
    }
    .example-menubar-2 {
      min-height: 56px;
    }
    .example-menubar-2 li {
      margin-bottom: 0;
    }
    .example-menubar-2 a {
      padding: 16px;
      color: #ddd;
    }
    .example-menubar-2 a:hover {
      color: #fff;
      text-decoration: none
    }

block body
  include example-partials/__example-partials-index
  
  .menubar.menubar--fixed.bg--white.example-menubar-1.py--4
    .menubar__brand
      a(href="#/")
        b Dashboard
    .menubar__content
      ul.menubar__right
        li #[a #[i.fa.fa-arrow-circle-left]]
        li #[a #[i.fa.fa-user-circle]]
        li #[a #[i.fa.fa-arrow-circle-right]]
        li #[a #[i.fa.fa-cog]]
        li #[a.dropdown__ctrl #[i.fa.fa-ellipsis-v]]
          .dropdown__content.dropdown__content--right.b--thin.bg--white
            ul.menu.decorate.left
              li #[a(href="") Edit your profile]
              li #[a(href="") Settings]
              li #[a(href="") Logout]
          
  .mt--48.menu.menu--fixed.menu--menubar-md.bg--gray-darken-3.example-menubar-2
    .menu__ctrl.menu__ctrl--right.m--12.btn.btn.btn--icon.btn--sm.btn--big-text.fa.fa-bars
    .menu__content
      ul.menubar__justify
        li #[a(href="#/") Projects]
        li #[a(href="#/") Teams]
        li #[a(href="#/") Assignments]
        li #[a(href="#/") Unassigned]
        li #[a(href="#/") Ideas]
        li #[a(href="#/") Showcase]
        li #[a(href="#/") Guides]
        a.dropdown__ctrl Search
        .dropdown__content.dropdown__content--right.bg--gray-darken-3
          form.mb.p--16
            input#search-example.b--gray.form__input--inline.form__input--sm.combo--left(name="examplename" placeholder="Search..." type="text")
            button.btn.btn--icon.btn--sm.combo--right(type="submit") #[i.fas.fa-search]    

  .flexbox.flexbox--gap.pt--84
    .flex-item--span-4.flex-item-sm--span-3.flex-item-md--span-2.pt--24.bg--white
      
      mixin card-sidebar(total)
        - var n = 0;
        while n < total
          .card.card-example.m--12
            .card__image
              +image-placeholder-light(64, 64, "mb--4 b--circle")
            .card__body.px--12(style="min-width: 120px;")
              .small.bold Joe Bloggs
                = " "
                = (n++ + 1)
              p.small.mb Status #[i.fas.fa-graduation-cap] #[br] #[i.fas.fa-clock] 1 hour ago
          //p(style="display: none;")= n++

      +card-sidebar(12)

    .flex-item--span-8.flex-item-sm--span-9.flex-item-md--span-10.mx--auto.pt--48(style="max-width: 1024px")
      
      h2 Joe Bloggs 1
            
      .flexbox.flexbox--gap.flexbox--nested

        .flex-item-md--span-6.flex-item-lg--span-4.mb--line
          .p--24.bg--white
            .initial-icon.
              #[i.fa.fa-chart-bar] 
              #[h3 Stats]
            +paragraph
            
            a.btn.btn--block(href="") View stats

        .flex-item-md--span-6.flex-item-lg--span-4.mb--line
          .p--24.bg--white
            .initial-icon.
              #[i.fa.fa-key] 
              #[h3 Permissions]
            +paragraph
            
            a.btn.btn--block(href="") Change permissions

        .flex-item-md--span-6.flex-item-lg--span-4.mb--line
          .p--24.bg--white
            .initial-icon.
              #[i.fa.fa-cog] 
              #[h3 Settings]
            +paragraph
            
            a.btn.btn--block(href="") Update settings 

        .flex-item-md--span-6.flex-item-lg--span-4.mb--line
          .p--24.bg--white
            .initial-icon.
              #[i.fa.fa-star] 
              #[h3 Projects]
            +paragraph
            
            a.btn.btn--block(href="") Assign projects

  +codebase-bottomline
  
