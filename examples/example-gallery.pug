//- Example Gallery

extends ../codebase/pug/_codebase

block vars
  - var title="Example Gallery"
  - var bodyClass = "bg--blue-lighten-3"

//- block append head-addins

block body
  include example-partials/__example-partials-index

  .bg--white.bb--thin.bg--blue-lighten-2
    .flexbox.flexbox--container
      .flexitem--span-12
        +example-menubar

  .flexbox.flexbox--container.flexbox--gutter
    .flexitem--span-12
      h1.mt--48 Picture Gallery

      p A simple image gallery using the Codebase tab system &ndash; combined with a flexbox layout for rearranging the tab labels and cards.

  style.
    .gallery-example .tab__label {
      border: 4px solid #ddf;
      border-radius: 4px
    }
    .gallery-example .tab__label.is-front {
      border-color: #aad;
    }

  .flexbox.flexbox--container.flexbox--gutter.gallery-example
    .flexitem.flexitem-md--span-3.mb--line.text--center
      .tab__label(data-tab-id="pic-01").
        #[img(src="holder.js/80x80?&text=Picture One")]
      .tab__label(data-tab-id="pic-02").
        #[img(src="holder.js/80x80?&text=Picture Two")]
      .tab__label(data-tab-id="pic-03").
        #[img(src="holder.js/80x80?&text=Picture Three")]
      .tab__label(data-tab-id="pic-04").
        #[img(src="holder.js/80x80?&text=Picture Four")]
      .tab__label(data-tab-id="pic-05").
        #[img(src="holder.js/80x80?&text=Picture Five")]
      .tab__label(data-tab-id="pic-06").
        #[img(src="holder.js/80x80?&text=Picture Six")]
      .tab__label(data-tab-id="pic-07").
        #[img(src="holder.js/80x80?&text=Picture Seven")]
      .tab__label(data-tab-id="pic-08").
        #[img(src="holder.js/80x80?&text=Picture Eight")]
      .tab__label(data-tab-id="pic-09").
        #[img(src="holder.js/80x80?&text=Picture Nine")]
      .tab__label(data-tab-id="pic-10").
        #[img(src="holder.js/80x80?&text=Picture Ten")]
      .tab__label(data-tab-id="pic-11").
        #[img(src="holder.js/80x80?&text=Picture Eleven")]
      .tab__label(data-tab-id="pic-12").
        #[img(src="holder.js/80x80?&text=Picture Twelve")]

    .flexitem.flexitem-md--span-9
