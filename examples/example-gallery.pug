  .flexbox.flexbox--container
    .flexitem--span-12

      hr

      .text--center
        ul.pagination
          li
            a(href="#/") #[i.fa.fa-arrow-left] Newer
          li
            a(href="#/") 1
          li
            a.pagination__current(href="http://www.example.com") 2
          li
            a(href="#/") 3
          li
            a(href="#/") 4
          li
            a(href="#/") 5
          li
            a(href="#/") Older #[i.fa.fa-arrow-right]
      
      p.text--center &copy; Picture Gallery.
        
