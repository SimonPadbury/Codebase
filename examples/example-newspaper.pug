                +paragraph

            
          .flexitem.flexitem-md--span-4.flexitem-md--order-1
            .mb--line.text--center.text--caps Recent
            
            a(href="#/").card
              .card__image.card__image--left.pr--8
                img(src="holder.js/64x64")
              .card__body
