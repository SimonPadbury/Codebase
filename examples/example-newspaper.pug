          .flexitem.flexitem-md--span-3
            h3.newspaper-logo #[a(href="#/") #[i.fa.fa-newspaper-o] Newspaper]
            form(style="padding:4px;")
              <input class="b--gray-darken-1 form__input--inline form__input--sm combo--left" id="search-example" name="examplename" placeholder="Search..." type="text">
              <button class="btn btn--icon btn--sm combo--right" type="submit"><i class="fa fa-search"></i></button>

            .mt--line
              +social
            
        .flexbox
          .flexitem
            hr
            p.text--center.
