      .flexitem.pt--20
        .flexbox.flexbox--gutter

          .flexitem.flexitem-md--span-3.mb--line
            img(src="holder.js/300x250")
          
          .flexitem.flexitem-md--span-6
            .flexbox.flexbox--gutter.flexbox--nested
