      .flexitem.flexitem-sm--span-8.flexitem-sm--order-1.flexitem-md--span-9
        
        .flexbox.flexbox--gutter.flexbox--nested
          .flexitem.flexitem-md--span-8.flexitem-md--order-2
            h4.mt--zero.text--center.text--caps Today's Main Stories
            
            img(src="holder.js/600x300")
            
            h2.mv--16.text--bold First Main Story Headline            
            +paragraph(2, "text--lead")
            
            hr
              
            .flexbox.flexbox--gutter.flexbox--nested
              .flexitem.flexitem-sm--span-6
                img(src="holder.js/600x300")
                
