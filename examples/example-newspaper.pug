    main.flexbox.flexbox--container.flexbox--gutter
      
      .flexitem.flexitem-sm--span-4.flexitem-sm--order-2.flexitem-md--span-3
          
        p.text--center.text--caps Advertisements
        
        .flexbox.mb--line
          .flexitem.flexitem--span-6.flexitem-sm--span-12.p--4
            img(src="holder.js/300x250")
          
          .flexitem.flexitem--span-6.flexitem-sm--span-12.p--4
